{
  "name": "LayoutAnimationDetect",
  "version": "1.0",
  "description": "Simple toolset to detect layout changes and animation layout changes.",
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "background": { "persistent": true, "scripts": ["background.js"] },
  "manifest_version": 2,
  "permissions": ["tabs", "activeTab", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cs.js"]
    }]
}
